<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.BerkasFragment">
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <LinearLayout
          android:layout_width="match_parent"
          android:orientation="vertical"
          android:gravity="center_horizontal"
          android:layout_height="match_parent">
          <androidx.appcompat.widget.SearchView
              app:queryHint="Cari Berkas"
              android:layout_margin="10dp"
              android:id="@+id/searchBerkas"
              app:iconifiedByDefault="false"
              android:background="@drawable/custom_searchbox"
              android:layout_width="300dp"
              android:layout_height="wrap_content"/>
          <LinearLayout
              android:padding="10dp"
              android:background="@color/colorPrimary"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <TextView
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:textColor="@color/putih"
                  android:text="No. Berkas"
                  />
              <TextView
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="3"
                  android:textColor="@color/putih"
                  android:text="Nama Pemohon"/>
          </LinearLayout>
          <androidx.recyclerview.widget.RecyclerView
              android:id="@+id/rvBerkas"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>
      </LinearLayout>
      <com.google.android.material.floatingactionbutton.FloatingActionButton
          android:layout_width="wrap_content"
          android:id="@+id/fabTambah"
          android:layout_alignParentBottom="true"
          android:layout_alignParentRight="true"
          android:backgroundTint="@color/colorPrimary"
          app:borderWidth="0dp"
          android:src="@drawable/ic_add_black_24dp"
          android:layout_margin="10dp"
          android:layout_height="wrap_content"/>
  </RelativeLayout>
</FrameLayout>